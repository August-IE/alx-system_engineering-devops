global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy
    tune.ssl.default-dh-param 2048

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000
    option forwardfor
    option http-server-close
    
listen Augustie.tech
    bind 0.0.0.0:443 ssl crt /etc/ssl/certs/www.augustie.tech.pem
    mode http
    stats enable
    stats uri /haproxy?stats
    balance roundrobin
    option httpclose
    option forwardfor
    server 271026-web-01 100.26.50.102:80 check
    server 271026-web-02 54.162.241.88:80 check
